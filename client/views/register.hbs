<!DOCTYPE html>
<html lang="de-DE">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/6ea270afe6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css">
    <title>Verhaltensexperimente</title>
  </head>

  <body>

{{> navbar}}

    {{!-- main content --}}
    <main class="login auth">
      <section class="auth-header">
        <a href="/user/login" class="auth-other">Anmelden</a>
        <div class="auth-headline">Registrieren</div>
      </section>
      <section class="auth-body">
        <form action="/user/register" method="post" class="auth-form" id="login-form">
          <div class="auth-form-field">
            <label for="email">Email</label>
            <input type="email" name="email" class="auth-input">
          </div>
          <div class="auth-form-field">
            <label for="password">Passwort</label>
            <input type="password" name="password" class="auth-input">
          </div>
          <div class="auth-form-field">
            <div class="auth-form-wrap">
              <input type="checkbox" name="stay" class="auth-input" id="auth-input-stay">
              <label for="stay">Angemeldet bleiben</label>
            </div>
          </div>
          <div class="auth-form-field">
            <input type="submit" value="Registrieren" class="auth-submit">
          </div>
        </form>
      </section>
    </main>

    {{> footer}}

  </body>
</html>