<!DOCTYPE html>
<html lang="de-DE">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/6ea270afe6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/vex.css">
    <title>{{vex.name}} - Verhaltensexperiment</title>
  </head>

  <body>
    {{> navbar}}

    <main class="content vex-pre">
      {{#with vex}}
      <section class="vex-header">
        <h2 class="vex-date">{{dateConversion date}}</h2>
        <h1 class="vex-headline">{{name}}</h1>
      </section>
      <section class="vex-body">
        <form action="/v/new/{{_id}}/post" method="post" class="vex-form vex-post-form">
          <div class="vex-form-field">
            <label for="ergebnis">Ergebnis*</label>
            <textarea name="ergebnis" class="vex-input vex-textbox" required>{{ergebnis}}</textarea>
          </div>
          <div class="vex-form-field">
            <label for="lernerfahrungen">Lernerfahrungen</label>
            <textarea type="textbox" name="lernerfahrungen" class="vex-input vex-textbox">{{lernerfahrungen}}</textarea>
          </div>
          <div class="vex-form-field btn-bottom-right">
            <input type="submit" value="Speichern">
          </div>
        </form>
      </section>
      {{/with}}
    </main>

    {{> footer}}
  </body>

  <script src="/style/style.js"></script>

</html>