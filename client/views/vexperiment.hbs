<!DOCTYPE html>
<html lang="de-DE">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/6ea270afe6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/vex.css">
    <title>Verhaltensexperimente</title>
  </head>

  <body>
    {{> navbar}}

    <!-- Site Content -->
    <main class="content vex">
      {{#with vex}}
      <section class="vex-header">
        <h2 class="vex-date">{{dateConversion date}}</h2>
        <h1 class="vex-headline">{{name}}</h1>
      </section>
      <section class="vex-body">
        <form action="/v/{{_id}}" method="post" class="vex-form">
          {{> vexField fieldName="situation" fieldValue=situation}}
          {{> vexField fieldName="personen" fieldValue=personen}}
          {{> vexField fieldName="sicherheitsverhalten" fieldValue=sicherheitsverhalten}}
          {{> vexField fieldName="befürchtungen" fieldValue=befürchtungen}}
          {{> vexField fieldName="experiment" fieldValue=experiment}}
          {{> vexField fieldName="ergebnis" fieldValue=ergebnis}}
          {{> vexField fieldName="lernerfahrungen" fieldValue=lernerfahrungen}}
        </form>
      </section>
      {{/with}}
    </main>

    {{> footer}}
  </body>

  <script>
    const setEdit = fieldName => {
      document.getElementById(`vex-field-show-${fieldName}`).style.display = 'none';
      document.getElementById(`vex-field-edit-${fieldName}`).style.display = 'grid';
    }

    const setShow = fieldName => {
      document.getElementById(`vex-field-edit-${fieldName}`).style.display = 'none';
      document.getElementById(`vex-field-show-${fieldName}`).style.display = 'grid';
    }
  </script>

  <script src="../style/style.js"></script>

</html>